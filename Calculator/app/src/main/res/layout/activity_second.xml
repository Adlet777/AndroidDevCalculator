<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SecondActivity">

    <Button
            android:text="Go Back"
            android:layout_width="198dp"
            android:layout_height="58dp"
            android:id="@+id/goBack" android:layout_marginBottom="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.478"
            app:layout_constraintVertical_bias="0.927" android:background="#D0ECAE" android:textSize="18sp"
            android:textStyle="normal" android:fontFamily="casual"/>
    <TextView
            android:text="The Result is:"
            android:layout_width="336dp"
            android:layout_height="84dp"
            android:id="@+id/result" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:textSize="52sp" android:textAlignment="center"
            android:fontFamily="casual" app:layout_constraintHorizontal_bias="0.432"
            app:layout_constraintVertical_bias="0.259"/>
    <TextView
            android:layout_width="336dp"
            android:layout_height="84dp"
            android:id="@+id/res" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:textSize="52sp" android:textAlignment="center"
            android:fontFamily="casual" app:layout_constraintHorizontal_bias="0.432"
            app:layout_constraintVertical_bias="0.436"/>
</androidx.constraintlayout.widget.ConstraintLayout>